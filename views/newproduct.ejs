<%- include('./partials/header') %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/registerStyle.css">
    <div class="container" id="mainContainer">
        <h1 class="well" id="formHead">Add new Product</h1>

        <form action="/products" method="POST">
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label>Product Name</label>
                    <input type="text" name="productname" placeholder="Enter the product Name here.." class="form-control">
                </div>
                <div class="col-sm-6 form-group">
                    <label>Product Type</label>
                    <input type="text" name="producttype" placeholder="Enter the producer type here.." class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label>Producer</label>
                <input type="text" name="producer" placeholder="Enter Producer name/company/Gruha Udyog name here.." rows="3" class="form-control">
            </div>
            <div class="row">
                <div class="col-sm-4 form-group">
                    <label>City</label>
                    <input type="text" name="city" placeholder="Your production city.." class="form-control">
                </div>
                <div class="col-sm-4 form-group">
                    <label>State</label>
                    <input type="text" name="state" placeholder="Your production State.." class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="text" name="phone" placeholder="Your  Phone Number here.." class="form-control">
            </div>

            <div class="form-group">
                <label>Sample Image URL</label>
                <input type="text" name="image" placeholder="" class="form-control">
            </div>

            <div class="form-group">
                <label>Price per quantity below in Rupees</label>
                <input type="text" name="price" placeholder="Enter price here.." class="form-control">
            </div>

            <div class="form-group">
                <label>Quantity to sell</label>
                <input type="text" name="quantity" placeholder="" class="form-control">
            </div>
            <button class="btn btn-lg btn-info">Submit</button>
        </form>
    </div>

    <%- include('./partials/footer') %>