<%- include('./partials/header') %>
<style type="text/stylesheets">
    body {
        /*background-image: linear-gradient(to top, #cd9cf2 0%, #f6f3ff 100%);*/
        background-image: linear-gradient(to top, #df89b5 0%, #bfd9fe 100%);
    }
</style>
<div class="container mb-5 pt-5">
    <div class="row mt-5 pt-5 pb-5">
        <div class="col-md-12">
            <div class="section-title">
                
                <h2 class="title" style="color:black;">Submit a Complaint</h2>
                <p>
                    If you have a complaint that needs to be submitted to official authorities, please use the form below.
                </p>
                <form id="complaint-form" method="POST" action="/submit-complaint" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <input placeholder="Name" id="complaint-name" name="name" type="text" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <input placeholder="Email" id="complaint-email" type="email" name="email" class="form-control" aria-describedby="emailHelp" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input placeholder="Subject" id="complaint-subject" name="subject" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <textarea placeholder="Complaint Details" id="complaint-message" name="message" class="form-control" rows="5" required></textarea>
                    </div>
                    <button href=type="submit" value="submit" class="btn btn-danger">
                        Submit Complaint
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/complaint.js"></script>
<%- include('./partials/footer') %>
